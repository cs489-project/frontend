{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        /* Linting */
        "strict": true, // Enables all strict type-checking options
        "noImplicitAny": true, // Disallow implicit 'any' types
        "noImplicitThis": true, // Disallow 'this' of type 'any'
        "strictNullChecks": true, // Ensure null and undefined are handled
        "strictFunctionTypes": true, // Enforce function parameter bivariance
        "strictBindCallApply": true, // Ensure proper use of .bind, .call, .apply
        "strictPropertyInitialization": true, // Ensure class properties are initialized
        "noUncheckedIndexedAccess": true, // Adds 'undefined' to out-of-bounds indexed accesses
        "noImplicitReturns": true, // Ensure functions return a value in all cases
        "noFallthroughCasesInSwitch": true, // Prevent fallthrough in switch statements
        "noUnusedLocals": true, // Report unused local variables
        "noUnusedParameters": true, // Report unused function parameters
        "noImplicitOverride": true, // Require 'override' modifier when overriding methods
        "noPropertyAccessFromIndexSignature": true, // Disallow property access via index signatures
        "exactOptionalPropertyTypes": true, // Prevent optional properties from accepting undefined implicitly
        "useUnknownInCatchVariables": true, // Use 'unknown' instead of 'any' in catch clauses
        "allowUnreachableCode": false, // Disallow unreachable code
        "allowUnusedLabels": false, // Disallow unused labels
        "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
        "esModuleInterop": false, // Disable ES module interop (stricter imports)
        "resolveJsonModule": true, // Allow importing JSON files
        "outDir": "./dist" // Define the output directory for compiled files
    },
    "include": [
        "vite.config.ts"
    ]
}